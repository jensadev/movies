doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    block nav
      include nav
    block content
    block flash 
      if messages
        .alert.alert-success(onclick="this.remove()")
          each message in messages 
            p= message
      if errors
        .alert.alert-error(onclick="this.remove()")
          each error in errors 
            p= error